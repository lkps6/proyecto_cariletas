<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDialogRelative"
    android:layout_margin="20dp"
    android:background="#F8F8F8"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/layoutDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/textTitle"
            android:background="#FF914D"
            android:fontFamily="@font/quicksand"
            android:padding="15dp"
            android:text="MODIFICAR PRODUCTO"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/txtNombrePM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:padding="15dp"
            android:text=""
            android:textSize="17sp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


        <EditText
            android:id="@+id/txtPrecioPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:padding="15dp"
            android:text=""
            android:textSize="17sp"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/txtDescripcionPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:padding="15dp"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


        <Button
            android:id="@+id/btnActualizarP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Actualizar"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/quicksand"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="#8C52FF"/>
    </LinearLayout>


</RelativeLayout>