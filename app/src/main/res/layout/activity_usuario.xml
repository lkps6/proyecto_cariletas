<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF5DE"
    tools:context=".UsuarioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF914D"
                android:fontFamily="@font/quicksand"
                android:padding="15dp"
                android:text="MENÃš"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:orientation="horizontal"

            android:padding="5dp">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/agregar">

            </ImageView>

            <ImageView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/consulta">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="5dp">

            <Button
                android:id="@+id/btnRegistro"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/quicksand"
                android:text="Registro productos"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="#8C52FF" />

            <Button
                android:id="@+id/btnConsultar"
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/quicksand"
                android:text="Consultar productos"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="#8C52FF" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/editar">

            </ImageView>

            <ImageView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/eliminar">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="5dp">


            <Button
                android:id="@+id/btnModificar"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:text="Modificar productos"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="#8C52FF" />

            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:text="Eliminar productos"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="#8C52FF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:src="@drawable/grupo">

            </ImageView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:id="@+id/btnMostrarUsuarios"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand"
                android:text="Mostrar Usuarios"
                android:textSize="15dp"
                android:textStyle="bold"
                app:backgroundTint="#8C52FF" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>