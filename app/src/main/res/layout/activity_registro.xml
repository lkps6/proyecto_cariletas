<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/reg"
            app:backgroundTint="#7ED957"
            tools:ignore="SpeakableTextPresentCheck"></Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:hint="REGISTRO DEL USUARIO"
            android:padding="20dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/txtUsuarioR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:hint="Escribe el Usuario"
            tools:ignore="TouchTargetSizeCheck"
            android:padding="15dp"/>

        <EditText
            android:id="@+id/txtPasswordR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:hint="Escribe el Password"
            android:padding="15dp"
            android:password="true"
            tools:ignore="TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/txtPasswordConfirmR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand"
            android:hint="Confirmar Password"
            android:padding="15dp"
            android:password="true"
            tools:ignore="TouchTargetSizeCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <Button
                android:id="@+id/btnGuardarR"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:fontFamily="@font/quicksand"
                android:text="Registrar"
                android:textSize="24sp"
                android:textStyle="bold"
                app:backgroundTint="#8C52FF"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>